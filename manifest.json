{
  "manifest_version": 3,
  "name": "Open all links",
  "description": "Открытие всех выделенных ссылок",
  "version": "1.0.0",
  "action": {
    "default_icon": {
      "16": "images/logo_64x64.png",
      "24": "images/logo_64x64.png",
      "32": "images/logo_64x64.png",
      "64": "images/logo_64x64.png",
      "128": "images/logo_128x128.png"
    }
  },
  "background": {
    "service_worker": "src/scripts/background.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ]
}
